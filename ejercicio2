programa ejercicio2
procesos 
  proceso juntarFlores (ES flores: numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      flores:= flores+1
  fin
  proceso juntarPapeles (ES papeles: numero)
  comenzar 
    mientras HayPapelEnLaEsquina
      tomarPapel
      papeles:= papeles+1
  fin
  proceso comparar (E flores: numero; E papeles: numero; ES contador: numero)
  comenzar
    si ( flores > papeles)
      contador:= contador+1
  fin
  proceso escalon (E alto: numero; ES contador: numero)
  variables
    flores: numero
    papeles: numero
  comenzar
    flores:=0
    papeles:= 0
    repetir alto
      juntarFlores (flores)
      juntarPapeles (papeles)
      mover
    derecha
    mover
    juntarFlores(flores)
    juntarPapeles (papeles)
    comparar (contador)
    repetir 3
      derecha
  fin
  proceso escalera (ES contador: numero;{ E alto: numero})
  comenzar
    contador:= 0
    repetir 4
      escalon (alto, contador)
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot escalera
  variables
    altura,contador: numero
  comenzar
    Random (altura, 1, 5)
    escalera (contador, altura)
    EnviarMensaje (contador, robot4)
  fin
  robot jefe
  variables
    contador, total: numero
  comenzar
    total:=0
    repetir 3
      RecibirMensaje (contador, *)
      total:= total+contador
    Informar (total)
  fin
